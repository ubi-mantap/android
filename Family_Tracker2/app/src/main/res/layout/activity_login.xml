<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ubimantap.family_tracker.tasks.LoginActivity"
    android:layout_centerInParent="true"
    android:gravity="center">


    <ImageView
        android:id="@+id/icon_tracker"
        android:layout_height="125dp"
        android:layout_width="125dp"
        android:layout_marginTop="9dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:src="@drawable/ic_launcher"/>

    <RelativeLayout
        android:id="@+id/field_username"
        android:layout_below="@+id/icon_tracker"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="#FFFFFF"
        android:layout_marginRight="26dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="26dp"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/from"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:textColor="#373535"
            android:textColorHint="#cfcdcd"
            android:inputType="text"
            android:textSize="7pt"
            android:hint="Username"
            android:layout_centerInParent="true"
            android:gravity="start"
            android:layout_marginLeft="5dp"/>

       </RelativeLayout>

    <RelativeLayout
        android:id="@+id/field_pass"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_below="@+id/field_username"
        android:background="#FFFFFF"
        android:layout_marginRight="26dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="26dp"
        android:focusableInTouchMode="true">

        <EditText
            android:id="@+id/to"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:textColor="#373535"
            android:textColorHint="#cfcdcd"
            android:textColorLink="#373535"
            android:inputType="textPassword"
            android:layout_centerInParent="true"
            android:gravity="start"
            android:textSize="7pt"
            android:hint="Password"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>

    <Button
        android:id="@+id/btlogin"
        android:layout_below="@+id/field_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="#ffffff"
        android:textColor="@color/ColorPrimaryDark"
        android:text="Sign in"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:onClick="signIn" />

    <RelativeLayout
        android:id="@+id/field_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btlogin"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:onClick="signUp">

        <TextView
            android:id="@+id/daftar"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="9dp"
            android:textColor="#ffffff"
            android:textSize="9pt"
            android:text="Sign Up"/>
       </RelativeLayout>

</RelativeLayout>
